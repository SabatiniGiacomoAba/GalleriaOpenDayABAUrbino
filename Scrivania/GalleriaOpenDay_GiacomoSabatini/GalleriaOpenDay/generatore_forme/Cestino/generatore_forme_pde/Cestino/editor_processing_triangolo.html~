<script>
function changeView()  {
    var tipo = document.forms["frmEditor"]["tipo"].value;
    
    if (tipo=="linea") {
			location.href = "editor_processing_linea.html";
    }
    if ((tipo=="rettangolo")||(tipo=="ellisse")) {
			location.href = "editor_processing_rettangolo_ellisse.html";
    }
    if (tipo=="triangolo") {
			location.href = "editor_processing_triangolo.html";
    }
    if (tipo=="spezzata") {
			location.href = "editor_processing_spezzata.html";
}
</script>
</head>
