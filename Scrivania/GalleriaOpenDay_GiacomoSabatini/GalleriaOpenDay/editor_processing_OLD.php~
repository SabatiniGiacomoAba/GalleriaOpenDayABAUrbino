<title>Login</title>
<script>
function modulo()  {
    var tipo = document.forms["frmEditor"]["tipo"].value;
    var cx = document.forms["frmEditor"]["cx"].value;
    var cy = document.forms["frmEditor"]["cy"].value;
    if (tipo == null || tipo == "") {
        alert("Bisogna inserire il tipo");
        return false;
    }
    if (cx == null || cx == "") {
        alert("Bisogna inserire la coordinata x");
        return false;
    }
    if (cy == null || cy == "") {
        alert("Bisogna inserire la coordinata y");
        return false;
    }
    return true;
}
</script>
</head>
